<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if logged_in? && current_user.admin? && !user.is_user?(current_user) %>
    <% if !user.admin? %>
    | <%= link_to t("user.delete"), admin_user_path(user.id) ,method: :delete,
        data: { confirm: "Are you sure ?" } %>
    |<%= link_to "Chance to Admin ", admin_user_path(user.id),method: :patch,
      data: { confirm: "Are you sure ?" } %>
    <% end %>
  <% end %>
</li>
