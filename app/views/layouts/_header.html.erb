<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Library Manager", home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? && current_user.admin? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Category<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Categorys", categories_path %></li>
              <li><%= link_to "Create Category", new_admin_category_path %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Book<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Books", books_path %></li>
              <li><%= link_to "Create Book", new_admin_book_path %></li>
            </ul>
          </li>
          <li><%= link_to "Users", admin_users_path %></li>
          <li><%= link_to "Requests", admin_requests_path %></li>
        <%else%>
          <li><%= link_to "Books", books_path %></li>
          <li><%= link_to "Categories", categories_path %></li>
        <% end %>
        <% if logged_in? %>
         <li class="dropdown">
           <a href="#" class="dropdown-toggle" data-toggle="dropdown">
             <%= t "account" %><b class="caret"></b>
           </a>
           <ul class="dropdown-menu">
             <li><%= link_to t("profile"), current_user %></li>
             <li><%= link_to t("settings"), edit_user_path(current_user) %></li>
             <li class="divider"></li>
             <li>
               <%= link_to t("logout"), logout_path, method: :delete %>
             </li>
           </ul>
         </li>
       <% else %>
         <li><%= link_to t("login"), login_path %></li>
       <% end %>
      </ul>
    </nav>
  </div>
</header>
